<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/affirmationListFragment">

    <fragment
        android:id="@+id/affirmationListFragment"
        android:name="com.pemrogamanmobile.myfavoritegames.ui.AffirmationListFragment"
        android:label="Games List"
        tools:layout="@layout/fragment_affirmation_list">
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/detailFragment"/>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.pemrogamanmobile.myfavoritegames.ui.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="affirmation"
            app:argType="com.pemrogamanmobile.myfavoritegames.data.Affirmation"/>
    </fragment>
</navigation>
